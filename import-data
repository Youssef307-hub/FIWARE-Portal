#!/bin/bash
#
#  curl commands to reload the data from the previous tutorial
#
#

set -e

printf "‚è≥ Loading context data "

#
# Create 2 Greenhouses
#
curl -iX POST \
  'http://localhost:1026/v2/op/update' \
  -H 'Content-Type: application/json' \
  -d '{
  "actionType":"APPEND",
  "entities":[
  {
  "id": "urn:ngsi-ld:Greenhouse:001",
  "type": "Greenhouse",
  "name": {
      "type": "Text",
      "value": "GreenHouse:001"
  },

  "description": {
      "type": "Text",
      "value": "GreenHouse 1 with rice crop"
  },
  "address": {
      "type": "Property",
      "value": {
          "type": "PostalAddress",
          "addressLocality": "Ismalia",
          "addressCountry": "EG",
          "streetAddress": "Street 123"
      }
  },
  "location": {
      "type": "geo:json",
      "value": {
          "type": "Point",
          "coordinates": [14.12, 55.22]
      }
  }
},
{
"id": "urn:ngsi-ld:Greenhouse:002",
"type": "Greenhouse",
"name": {
    "type": "Text",
    "value": "GreenHouse 2"
},
"description": {
    "type": "Text",
    "value": "GreenHouse 2 with wheat crop"
},

"address": {
    "type": "Property",
    "value": {
        "type": "PostalAddress",
        "addressLocality": "Fayoum",
        "addressCountry": "EG",
        "streetAddress": "Street 456"
    }
},
"location": {
    "type": "geo:json",
    "value": {
        "type": "Point",
        "coordinates": [24.12, 65.22]
    }
}

}
  ]
}'


#
# Create a service group with apikey = 4jggokgpepnvsb2uv4s40d59ov
#
#
curl -iX POST \
'http://localhost:4041/iot/services' \
-H 'Content-Type: application/json' \
-H 'fiware-service: openiot' \
-H 'fiware-servicepath: /' \
-d '{
 "services": [
   {
     "apikey":      "4jggokgpepnvsb2uv4s40d59ov",
     "cbroker":     "http://orion:1026",
     "entity_type": "Thing",
     "resource":    "/iot/json"
   }
 ]
}'

